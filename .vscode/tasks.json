{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/hyouka-api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "fast-build",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/hyouka-api.csproj",
                "--no-restore"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}